{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HammerOverlay",
  "version": "0.1.0",
  "identifier": "com.hammer-overlay.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HammerOverlay",
        "width": 480,
        "height": 450,
        "minWidth": 400,
        "minHeight": 100,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "center": true,
        "skipTaskbar": true,
        "tabbingIdentifier": "main",
        "backgroundColor": "#1a1a1a"
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "tooltip": "HammerOverlay - Discord Timestamp Converter"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "globalShortcut": {
      "all": true
    },
    "sql": {
      "preload": ["sqlite:hammer_overlay.db"]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/BASIC-BIT/discord-time-app/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}
