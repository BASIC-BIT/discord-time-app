{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HammerOverlay",
  "version": "0.1.0",
  "identifier": "com.hammer-overlay.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "HammerOverlay",
        "width": 500,
        "height": 400,
        "minWidth": 400,
        "minHeight": 200,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "center": true,
        "skipTaskbar": true,
        "tabbingIdentifier": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "globalShortcut": {
      "all": true
    },
    "sql": {
      "preload": ["sqlite:hammer_overlay.db"]
    }
  }
}
